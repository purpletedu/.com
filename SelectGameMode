import React from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Zap, Users, ArrowLeft } from "lucide-react";
import { useNavigate, Link } from "react-router-dom";
import { createPageUrl } from "@/utils";

export default function SelectGameModePage() {
  const navigate = useNavigate();
  const urlParams = new URLSearchParams(window.location.search);
  const classId = urlParams.get('class_id');

  const { data: user } = useQuery({
    queryKey: ['user'],
    queryFn: () => base44.auth.me(),
  });

  const createRoomMutation = useMutation({
    mutationFn: (data) => base44.entities.Room.create(data),
    onSuccess: (room) => {
      navigate(`${createPageUrl("GameLobby")}?room_id=${room.id}`);
    },
  });

  const selectGameMode = (mode) => {
    const roomCode = Math.random().toString(36).substring(2, 8).toUpperCase();
    
    createRoomMutation.mutate({
      room_code: roomCode,
      teacher_email: user.email,
      class_id: classId,
      status: "lobby",
      game_mode: mode,
      game_duration_minutes: 10,
    });
  };

  return (
    <div className="min-h-screen p-4 md:p-8">
      <div className="max-w-5xl mx-auto">
        <Link to={createPageUrl("TeacherDashboard")}>
          <Button variant="ghost" className="mb-6">
            <ArrowLeft className="w-4 h-4 mr-2" />
            Back to Dashboard
          </Button>
        </Link>

        <div className="text-center mb-12">
          <h1 className="text-5xl font-bold text-gray-800 mb-4">Select Game Mode</h1>
          <p className="text-xl text-gray-600">Choose how your students will play</p>
        </div>

        <div className="grid md:grid-cols-2 gap-8">
          <Card className="bg-white/90 backdrop-blur-sm border-2 border-emerald-200 shadow-2xl hover:shadow-3xl transition-all duration-300 hover:scale-105 cursor-pointer">
            <CardHeader className="text-center pb-4">
              <div className="w-24 h-24 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
                <Zap className="w-14 h-14 text-white" />
              </div>
              <CardTitle className="text-3xl mb-2">Classic</CardTitle>
              <CardDescription className="text-base">Individual competition - every student for themselves!</CardDescription>
            </CardHeader>
            <CardContent className="text-center space-y-4">
              <ul className="text-left space-y-2 mb-6">
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                  Answer questions to earn money
                </li>
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                  Build streaks for bonus earnings
                </li>
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                  Purchase upgrades to boost performance
                </li>
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                  Compete for the top spot on the leaderboard
                </li>
              </ul>
              <Button
                onClick={() => selectGameMode('classic')}
                disabled={createRoomMutation.isPending}
                className="w-full bg-gradient-to-r from-emerald-500 to-teal-600 text-white py-6 text-lg rounded-xl shadow-lg hover:shadow-xl"
              >
                {createRoomMutation.isPending ? "Creating Room..." : "Play Classic"}
              </Button>
            </CardContent>
          </Card>

          <Card className="bg-white/90 backdrop-blur-sm border-2 border-blue-200 shadow-2xl hover:shadow-3xl transition-all duration-300 hover:scale-105 cursor-pointer opacity-60">
            <CardHeader className="text-center pb-4">
              <div className="w-24 h-24 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-xl">
                <Users className="w-14 h-14 text-white" />
              </div>
              <CardTitle className="text-3xl mb-2">Team Mode</CardTitle>
              <CardDescription className="text-base">Work together with your team to win!</CardDescription>
            </CardHeader>
            <CardContent className="text-center space-y-4">
              <ul className="text-left space-y-2 mb-6">
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                  Form teams and collaborate
                </li>
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                  Share earnings with teammates
                </li>
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                  Team upgrades benefit everyone
                </li>
                <li className="flex items-center gap-2 text-gray-700">
                  <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                  Win together as a team
                </li>
              </ul>
              <Button
                disabled
                className="w-full bg-gray-400 text-white py-6 text-lg rounded-xl"
              >
                Coming Soon
              </Button>
            </CardContent>
          </Card>
        </div>
      </div>
    </div>
  );
}
